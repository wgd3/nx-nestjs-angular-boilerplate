{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/server/data-access": ["libs/server/data-access/src/index.ts"],
      "@libs/server/feat-auth": ["libs/server/feat-auth/src/index.ts"],
      "@libs/server/feat-health": ["libs/server/feat-health/src/index.ts"],
      "@libs/server/feat-user": ["libs/server/feat-user/src/index.ts"],
      "@libs/server/util-common": ["libs/server/util-common/src/index.ts"],
      "@libs/server/util-mailer": ["libs/server/util-mailer/src/index.ts"],
      "@libs/shared/util-constants": [
        "libs/shared/util-constants/src/index.ts"
      ],
      "@libs/shared/util-types": ["libs/shared/util-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
